<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>

    <!-- Bootstrap and FontAwesome -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playwrite+AU+SA:wght@100..400&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/dashboard.css" />
  </head>
  <body class="bg-light d-flex flex-column min-vh-100 customBody">
    <div class="d-flex">
      <!-- Sidebar -->
      <div
        class="d-flex flex-column flex-shrink-0 p-3 customSidebar"
        style="width: 280px; height: 100vh; position: fixed; top: 0; left: 0"
      >
        <a
          href="/"
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
        >
          <span class="fs-4">
            <span style="color: #ff004f; font-weight: bold">C</span>ycle<span
              style="color: #ff004f; font-weight: bold"
              >S</span
            >ync
          </span>
        </a>
        <hr />
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="/" class="nav-link" aria-current="page">
              <i class="fa-solid fa-house"></i> Home
            </a>
          </li>
          <li>
            <a href="#" class="nav-link text-white">
              <i class="fa-solid fa-gauge-high"></i> Dashboard
            </a>
          </li>
          <li>
            <a href="/wheels" class="nav-link text-white">
              <i class="fa-solid fa-person-biking"></i> Rent a wheel
            </a>
          </li>
          <li>
            <a href="#" class="nav-link text-white">
              <i class="fa-solid fa-bicycle"></i> My Rentals
            </a>
          </li>
          <li>
            <a href="/plans" class="nav-link text-white">
              <i class="fa-solid fa-clipboard"></i> Membership Plans
            </a>
          </li>
          <li>
            <a href="/feedback" class="nav-link text-white">
              <i class="fa-solid fa-comments"></i> Feedback
            </a>
          </li>
          <li>
            <a href="#" class="nav-link text-white">
              <i class="fa-solid fa-gear"></i> Profile Settings
            </a>
          </li>
        </ul>
        <hr />
        <div class="dropdown">
          <a
            href="#"
            class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img
              src="https://github.com/mdo.png"
              alt=""
              width="32"
              height="32"
              class="rounded-circle me-2"
            />
            <!-- <strong>mdo</strong> -->
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="/logout">Sign out</a></li>
          </ul>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="flex-grow-1" style="margin-left: 280px">
        <!-- Navbar -->
        <nav class="navbar navbar-dark bg-dark px-4 customNavbar">
          <div class="container-fluid">
            <a class="navbar-brand" href="/"
              ><i class="fa-solid fa-house"></i> / Profile</a
            >
            <form class="d-flex" role="search">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button class="btn btn-outline-success" type="submit">
                Search
              </button>
            </form>
          </div>
        </nav>

        <!-- Content Section -->
        <div class="p-4">
          <h2>Dashboard</h2>
          <br />
          <h4>
            Welcome <span class="username"><%= currUser.username %></span> to
            the Dashboard
          </h4>
          <br />
          <!-- Cards Section -->
          <div class="container">
            <div class="row">
              <!-- Card 1 -->
              <div class="col-md-3">
                <div class="card stats-card">
                  <div class="card-body">
                    <div class="d-flex align-items-center">
                      <div class="icon-container">
                        <i class="fas fa-wallet icon"></i>
                      </div>
                      <div class="ms-3">
                        <h6>My Active Rides</h6>
                        <h4 class="text-success">3</h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Card 2 -->
              <div class="col-md-3">
                <div class="card stats-card">
                  <div class="card-body">
                    <div class="d-flex align-items-center">
                      <div class="icon-container">
                        <i class="fas fa-users icon"></i>
                      </div>
                      <div class="ms-3">
                        <h6>Rental History</h6>
                        <h4 class="text-success">2</h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Card 3 -->
              <div class="col-md-3">
                <div class="card stats-card">
                  <div class="card-body">
                    <div class="d-flex align-items-center">
                      <div class="icon-container">
                        <i class="fas fa-globe icon"></i>
                      </div>
                      <div class="ms-3">
                        <h6>Pending Payments</h6>
                        <h4>0</h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Card 4 -->
              <div class="col-md-3">
                <div class="card stats-card">
                  <div class="card-body">
                    <div class="d-flex align-items-center">
                      <div class="icon-container">
                        <i class="fas fa-shopping-cart icon"></i>
                      </div>
                      <div class="ms-3">
                        <h6>Membership Status</h6>
                        <h4>None</h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- End of Cards Section -->
          <hr style="color: rgb(51, 51, 51)" />
          <h4 id="secondHead">Available Wheels For Rent</h4>
          <% if (availableWheels && availableWheels.length > 0) { %>
          <div class="container mt-3">
            <div class="row">
              <% availableWheels.forEach((wheel) => { %>
              <div class="col-md-4">
                <div class="card mb-4">
                  <img
                    src="<%= wheel.image %>"
                    class="card-img-top"
                    alt="Bicycle Image"
                    style="height: 200px; object-fit: cover"
                  />
                  <div class="card-body">
                    <h5 class="card-title">Model: <%= wheel.modelName %></h5>
                    <p class="card-text">
                      <strong>Rent Price:</strong> â‚¹<%= wheel.rentPrice %><br />
                      <strong>Accessories:</strong> <%= wheel.accessories %><br />
                      <strong>Description:</strong> <%= wheel.type %>
                    </p>
                    <a href="/wheels/<%= wheel._id %>" class="btn btn-primary">
                      View Details
                    </a>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
          <% } else { %>
          <div class="alert alert-warning" role="alert">
            No wheel details available. Please check again later.
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
