<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Top CycleStands</title>
    <!-- Correct stylesheet for MapLibre -->
    <link
      href="https://unpkg.com/maplibre-gl/dist/maplibre-gl.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      #map {
        width: 100%;
        height: 500px;
        border-radius: 20px;
      }
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }
      h1 {
        color: whitesmoke;
        text-align: center;
        font-weight: bold;
        font-size: 25px;
        margin-top: 15px;
        margin-bottom: 15px;
      }
    </style>
  </head>
  <body class="bg-dark">
    <h1>Cycle Stand Locations</h1>
    <div id="map"></div>

    <!-- Script for MapLibre -->
    <script src="https://unpkg.com/maplibre-gl/dist/maplibre-gl.js"></script>

    <script>
      const map = new maplibregl.Map({
        container: "map",
        style:
          "https://api.maptiler.com/maps/streets-v2/style.json?key=PQ1ozx5K4ff4ZHxSbzn2",
        center: [82.145, 22.078], // Corrected center for Bilaspur, Chhattisgarh
        zoom: 13,
      });

      const cycleStands = [
        {
          coordinates: [82.1523, 22.0786], // Longitude, Latitude
          description: "Cycle Stand A, Nehru Chowk",
        },
        {
          coordinates: [82.145, 22.0795],
          description: "Cycle Stand B, Gandhi Chowk",
        },
        {
          coordinates: [82.139, 22.07],
          description: "Cycle Stand C, Rama Magneto Mall",
        },
        {
          coordinates: [82.127, 22.097],
          description: "Cycle Stand D, Koni",
        },
        {
          coordinates: [82.14, 22.073],
          description: "Cycle Stand E, Bilaspur Railway Station",
        },
      ];

      cycleStands.forEach((stand) => {
        const popup = new maplibregl.Popup({ offset: 25 }).setText(
          stand.description
        );

        new maplibregl.Marker({ color: "blue" })
          .setLngLat(stand.coordinates)
          .setPopup(popup)
          .addTo(map);
      });
    </script>
  </body>
</html>
