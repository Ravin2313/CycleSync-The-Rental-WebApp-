<!-- payment-confirmation.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Confirmation</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <h1 class="text-center">Payment Confirmation</h1>
      <p class="text-center">
        Thank you for scanning the QR code. Please confirm your payment.
      </p>

      <form method="POST" action="/wheels/<%= wheel._id %>/payment-confirm">
        <!-- Hidden inputs to send payment status and details -->
        <input type="hidden" name="paymentStatus" value="success" />
        <input type="hidden" name="transactionId" value="TXN123456789" />
        <!-- Simulated transaction ID -->
        <input type="hidden" name="paymentMethod" value="UPI" />
        <!-- Payment method -->

        <!-- Confirmation Button -->
        <div class="text-center mt-4">
          <button type="submit" class="btn btn-primary btn-lg">
            Confirm Payment
          </button>
        </div>
      </form>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AWWa8f5yM2zE01B4CF77RLsIWbMWG5lZG8R9qofKOz2MkFV9Q8SR3r0K3sm4"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
