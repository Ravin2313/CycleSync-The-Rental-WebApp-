<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Wheel</title>
  </head>
  <body>
    <form action="/wheels" method="post">
      <h3>Add a new Wheel</h3>

      <!-- Cycle ID (Unique, Required) -->
      <input
        name="wheel[cycleId]"
        placeholder="Enter Cycle ID"
        type="text"
        required
        pattern="^[a-zA-Z0-9]+$"
        <!--
        Alphanumeric
        validation
        --
      />
      <br /><br />

      <!-- Model Name (Required) -->
      <input
        name="wheel[modelName]"
        placeholder="Enter Model Name"
        type="text"
        required
      /><br /><br />

      <!-- Cycle Type (Required) -->
      <input
        name="wheel[type]"
        placeholder="Enter Cycle Type"
        type="text"
        required
      /><br /><br />

      <!-- Rent Price (Required, Must be a number) -->
      <input
        name="wheel[rentPrice]"
        placeholder="Enter Rent Price"
        type="number"
        required
        min="0"
        title="Rent Price must be a positive number."
      /><br /><br />

      <!-- Availability Status (Dropdown, Enum) -->
      <select name="wheel[availabilityStatus]" required>
        <option value="Available">Available</option>
        <option value="Rented">Rented</option></select
      ><br /><br />

      <!-- Current Location (Required) -->
      <input
        name="wheel[currentLocation]"
        placeholder="Enter Current Location"
        type="text"
        required
      /><br /><br />

      <!-- Image URL (Required, Must be a valid URL) -->
      <input
        name="wheel[image]"
        placeholder="Enter Image URL"
        type="url"
        required
        title="Please enter a valid URL."
      /><br /><br />

      <!-- Condition (Optional, Defaults to 'Good') -->
      <input
        name="wheel[condition]"
        placeholder="Condition of Cycle (Default: Good)"
        type="text"
      /><br /><br />

      <!-- Accessories (Optional, Defaults to 'None') -->
      <input
        name="wheel[accessories]"
        placeholder="Enter Accessories (Default: None)"
        type="text"
      /><br /><br />

      <!-- Added Date (Optional, Defaults to current date) -->
      <input
        name="wheel[addedDate]"
        placeholder="Enter Added Date"
        type="date"
      /><br /><br />

      <!-- Usage History (Optional, Must be a positive number) -->
      <input
        name="wheel[usageHistory]"
        placeholder="Enter Usage History (Number of uses)"
        type="number"
        min="0"
        title="Usage history must be a non-negative number."
      /><br /><br />

      <!-- Submit Button -->
      <button type="submit">Add</button>
    </form>
  </body>
</html>
