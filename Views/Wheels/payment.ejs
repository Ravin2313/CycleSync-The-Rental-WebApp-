<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment for <%= wheel.modelName %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .container {
        margin-top: 50px;
      }
      .qr-code {
        text-align: center;
      }
      .btn-custom {
        background-color: #007bff;
        color: white;
      }
      .btn-custom:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body class="bg-dark">
    <div class="container mb-3">
      <div class="card mx-auto" style="max-width: 600px">
        <div class="card-header text-center bg-primary text-white">
          <h3>Payment for <%= wheel.modelName %></h3>
        </div>
        <div class="card-body">
          <p>
            <strong>Wheel Details:</strong> <%= wheel.modelName %><br />
            <strong>Rent Price (per day):</strong> ₹<%= wheel.rentPrice %>
          </p>
          <p>Please use the QR code below to complete your payment via UPI:</p>
          <div class="qr-code">
            <img src="<%= qrImage %>" alt="QR Code" class="img-fluid" />
          </div>
          <div class="alert alert-info text-center mt-3">
            Scan the QR code using any UPI app to pay ₹<%= wheel.rentPrice %>.
          </div>
        </div>
        <div class="card-footer text-center">
          <form action="/wheels/<%= wheel._id %>/payment-confirm" method="POST">
            <button type="submit" class="btn btn-custom">Payment Done</button>
          </form>
          <a href="/wheels" class="btn btn-secondary mt-2">Cancel</a>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
